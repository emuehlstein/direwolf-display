# Direwolf configuration managed by Ansible
ADEVICE {{ direwolf_audio_input }} {{ direwolf_audio_output }}
ACHANNELS 1
ARATE 48000
CHANNEL 0
MYCALL NOCALL
PTT RIG {{ direwolf_ptt_device }} {{ direwolf_ptt_line }}

# Logging configuration for CSV tailer
LOGDIR /var/log/direwolf
LOGFILE %Y-%m-%d.log
LOGFIXCSV 1
LOGBEEPS 0
IGFILTER 0
